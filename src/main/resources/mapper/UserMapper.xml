<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.dongsanbu.domain.user.mapper.UserMapper">

    <select id="findById" parameterType="int" resultType="user">
        SELECT *
        FROM member
        WHERE id = #{id}
    </select>

    <select id="findIngredientById" parameterType="String" resultType="Ingredient">
        SELECT *
        FROM ingredient
        WHERE id = #{id}
    </select>

    <insert id="registUser" parameterType="user">
        INSERT INTO member (id, username, password, nickname, email, profile_image, authority, point)
        VALUES (#{id}, #{username}, #{password}, #{nickname}, #{email}, #{profileImage}, #{authority}, #{point})
    </insert>

    <insert id="saveIngredient" parameterType="ingredient">
        INSERT INTO ingredient (id, salt)
        VALUES (#{id}, #{salt})
    </insert>

    <update id="updateUser" parameterType="user">
        UPDATE member
        SET nickname = #{nickname},
            email = #{email}
        WHERE id = #{id}
    </update>

    <update id="updatePoint" parameterType="user">
        UPDATE member
        SET point = #{point}
        WHERE id = #{id}
    </update>

    <update id="updateProfileImage" parameterType="com.ssafy.dongsanbu.domain.user.dto.UserProfileImageUpdateDto">
        UPDATE member
        SET profile_image = #{profileImage}
        WHERE id = #{id}
    </update>

    <delete id="deleteUser" parameterType="int">
        DELETE
        FROM member
        WHERE id = #{id}
    </delete>

</mapper>